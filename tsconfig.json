{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["index.d.ts"],
	"exclude": ["node_modules", "index.js"]
}
